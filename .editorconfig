root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[**.xml]
indent_size = 2
max_line_length = 120

[**.{yaml,yml}]
indent_size = 2
max_line_length = 100

[**.md]
indent_size = 2
max_line_length = 120

[**.json]
indent_size = 2

[requirements.txt]
trim_trailing_whitespace = false

[**.py]
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_size = 4
indent_style = tab
